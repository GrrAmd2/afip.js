{
  "compilerOptions": {
    "target": "es6",    
    "module": "commonjs",    
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "!src/.baseDir.ts",
    "**/*.spec.ts"
  ]
}

